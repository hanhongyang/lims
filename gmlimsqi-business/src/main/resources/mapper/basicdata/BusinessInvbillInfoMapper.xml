<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gmlimsqi.business.basicdata.mapper.BusinessInvbillInfoMapper">

    <resultMap type="BusinessInvbillInfo" id="BusinessInvbillInfoResult">
            <result property="id"    column="id"    />
            <result property="invbillId"    column="invbill_id"    />
            <result property="deptId"    column="dept_id"    />
            <result property="deptName"    column="dept_name"    />
            <result property="createBy"    column="create_by"    />
            <result property="createTime"    column="create_time"    />
            <result property="updateBy"    column="update_by"    />
            <result property="updateTime"    column="update_time"    />
            <result property="izj"    column="izj"    />
            <result property="sapName"    column="sap_name"    />
    </resultMap>

    <sql id="selectBusinessInvbillInfoVo">
        select id, invbill_id, dept_id, dept_name, create_by, create_time, update_by, update_time,izj from business_invbill_info
    </sql>

    <select id="selectBusinessInvbillInfoList" parameterType="BusinessInvbillInfo" resultMap="BusinessInvbillInfoResult">
        <include refid="selectBusinessInvbillInfoVo"/>
        <where>
                        <if test="invbillId != null  and invbillId != ''"> and invbill_id = #{invbillId}</if>
                        <if test="deptId != null  and deptId != ''"> and dept_id = #{deptId}</if>
                        <if test="deptName != null  and deptName != ''"> and dept_name like concat('%', #{deptName}, '%')</if>
        </where>
    </select>

    <select id="selectBusinessInvbillInfoById" parameterType="String" resultMap="BusinessInvbillInfoResult">
            <include refid="selectBusinessInvbillInfoVo"/>
            where id = #{id}
    </select>

    <insert id="insertBusinessInvbillInfo" parameterType="BusinessInvbillInfo">
        insert into business_invbill_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
                    <if test="id != null">id,</if>
                    <if test="invbillId != null">invbill_id,</if>
                    <if test="deptId != null">dept_id,</if>
                    <if test="deptName != null">dept_name,</if>
                    <if test="createBy != null">create_by,</if>
                    <if test="createTime != null">create_time,</if>
                    <if test="updateBy != null">update_by,</if>
                    <if test="updateTime != null">update_time,</if>
                    <if test="izj != null">izj,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                    <if test="id != null">#{id},</if>
                    <if test="invbillId != null">#{invbillId},</if>
                    <if test="deptId != null">#{deptId},</if>
                    <if test="deptName != null">#{deptName},</if>
                    <if test="createBy != null">#{createBy},</if>
                    <if test="createTime != null">#{createTime},</if>
                    <if test="updateBy != null">#{updateBy},</if>
                    <if test="updateTime != null">#{updateTime},</if>
                    <if test="izj != null">#{izj},</if>
        </trim>
    </insert>

    <update id="updateBusinessInvbillInfo" parameterType="BusinessInvbillInfo">
        update business_invbill_info
        <trim prefix="SET" suffixOverrides=",">
                    <if test="invbillId != null">invbill_id = #{invbillId},</if>
                    <if test="deptId != null">dept_id = #{deptId},</if>
                    <if test="deptName != null">dept_name = #{deptName},</if>
                    <if test="createBy != null">create_by = #{createBy},</if>
                    <if test="createTime != null">create_time = #{createTime},</if>
                    <if test="updateBy != null">update_by = #{updateBy},</if>
                    <if test="updateTime != null">update_time = #{updateTime},</if>
                    <if test="izj != null">izj = #{izj},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusinessInvbillInfoById" parameterType="String">
        delete from business_invbill_info where id = #{id}
    </delete>

    <delete id="deleteBusinessInvbillInfoByInvbillId" parameterType="String">
        delete from business_invbill_info where invbill_id = #{invbillId}
    </delete>

    <delete id="deleteBusinessInvbillInfoByIds" parameterType="String">
        delete from business_invbill_info where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <insert id="batchInsertBusinessInvbillInfo">
        INSERT INTO business_invbill_info (
        id, invbill_id, dept_id, dept_name,
        create_by, create_time, update_by,
        update_time, izj
        ) VALUES
        <foreach item="item" index="index" collection="list" separator=",">
            (
            #{item.id}, #{item.invbillId}, #{item.deptId},
            #{item.deptName}, #{item.createBy}, #{item.createTime},
            #{item.updateBy}, #{item.updateTime}, #{item.izj}
            )
        </foreach>
    </insert>

    <select id="selectBusinessInvbillInfoByInvbillId" resultType="BusinessInvbillInfo">
        select id,
        invbill_id,
        dept_id,
        dept_name,
        create_by,
        create_time,
        update_by,
        update_time,
        izj
        from business_invbill_info
        where invbill_id = #{invbillId}
    </select>

</mapper>