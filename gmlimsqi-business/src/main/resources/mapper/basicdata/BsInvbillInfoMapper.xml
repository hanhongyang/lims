<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gmlimsqi.business.basicdata.mapper.BsInvbillInfoMapper">

    <resultMap type="BsInvbillInfo" id="BsInvbillInfoResult">
        <result property="bsInvbillInfoId"    column="bs_invbill_info_id"    />
        <result property="sapCode"    column="sap_code"    />
        <result property="isUploadReport"    column="is_upload_report"    />
        <result property="tag"    column="tag"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="deleteId"    column="delete_id"    />
    </resultMap>

    <sql id="selectBsInvbillInfoVo">
        select bs_invbill_info_id, sap_code, is_upload_report, tag, create_time, create_by, update_time, update_by, delete_id from bs_invbill_info
    </sql>

    <select id="selectBsInvbillInfoList" parameterType="BsInvbillInfo" resultMap="BsInvbillInfoResult">
        <include refid="selectBsInvbillInfoVo"/>
        <where>
            and is_delete = '0'  <!-- 固定添加软删除条件 -->
            <if test="sapCode != null  and sapCode != ''"> and sap_code = #{sapCode}</if>
            <if test="isUploadReport != null  and isUploadReport != ''"> and is_upload_report = #{isUploadReport}</if>
            <if test="tag != null  and tag != ''"> and tag = #{tag}</if>
        </where>
    </select>

    <select id="selectBsInvbillInfoByBsInvbillInfoId" parameterType="String" resultMap="BsInvbillInfoResult">
        <include refid="selectBsInvbillInfoVo"/>
        where bs_invbill_info_id = #{bsInvbillInfoId}
    </select>

    <insert id="insertBsInvbillInfo" parameterType="BsInvbillInfo">
        insert into bs_invbill_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bsInvbillInfoId != null">bs_invbill_info_id,</if>
            <if test="sapCode != null">sap_code,</if>
            <if test="isUploadReport != null">is_upload_report,</if>
            <if test="tag != null">tag,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateBy != null">update_by,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bsInvbillInfoId != null">#{bsInvbillInfoId},</if>
            <if test="sapCode != null">#{sapCode},</if>
            <if test="isUploadReport != null">#{isUploadReport},</if>
            <if test="tag != null">#{tag},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
        </trim>
    </insert>

    <update id="updateBsInvbillInfo" parameterType="BsInvbillInfo">
        update bs_invbill_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="sapCode != null">sap_code = #{sapCode},</if>
            <if test="isUploadReport != null">is_upload_report = #{isUploadReport},</if>
            <if test="tag != null">tag = #{tag},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
        </trim>
        where bs_invbill_info_id = #{bsInvbillInfoId}
    </update>


    <update id="updateDeleteFlagById" >
        update bs_invbill_info set delete_id=bs_invbill_info_id ,update_time=now(),update_by=#{updateUserId} where bs_invbill_info_id = #{bsInvbillInfoId}
    </update>

    <update id="updateDeleteFlagBySapCode">
        update  bs_invbill_info set delete_id=bs_invbill_info_id ,update_time=now(),update_by=#{updateUserId}  where sap_code =#{sapCode}

    </update>


</mapper>