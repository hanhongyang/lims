<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gmlimsqi.system.mapper.SysUploadFileMapper">

    <resultMap id="SysUploadFileResult" type="com.gmlimsqi.system.domain.SysUploadFile">
        <result property="fileId" column="file_id"/>
        <result property="originalName" column="original_name"/>
        <result property="filePath" column="file_path"/>
        <result property="fileSize" column="file_size"/>
        <result property="fileType" column="file_type"/>
        <result property="fileExtension" column="file_extension"/>
        <result property="uploadTime" column="upload_time"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="createBy" column="create_by"/>
        <result property="url" column="url"/>
    </resultMap>

    <sql id="selectFileVo">
        select file_id, original_name, file_path, file_size, file_type, file_extension,
               upload_time, status, create_time, create_by,url
        from sys_upload_file
    </sql>

    <!-- 根据ID查询文件 -->
    <select id="selectFileById" parameterType="String" resultMap="SysUploadFileResult">
        <include refid="selectFileVo"/>
        where file_id = #{fileId}
    </select>

    <!-- 插入文件记录 -->
    <insert id="insertFile" parameterType="com.gmlimsqi.system.domain.SysUploadFile"
            useGeneratedKeys="true" keyProperty="fileId">
        insert into sys_upload_file (
                                     file_id,
            original_name,
            file_path,
            file_size,
            file_type,
            file_extension,
            upload_time,
            status,
            create_time,
            create_by,
                                     url
        ) values (
                             #{fileId},
                     #{originalName},
                     #{filePath},
                     #{fileSize},
                     #{fileType},
                     #{fileExtension},
                     #{uploadTime},
                     #{status},
                     #{createTime},
                     #{createBy},
                             #{url}
                 )
    </insert>

    <!-- 根据ID删除文件记录 -->
    <delete id="deleteFileById" parameterType="String">
        delete from sys_upload_file where file_id = #{fileId}
    </delete>

    <!-- 更新文件状态 -->
    <update id="updateFileStatus" parameterType="com.gmlimsqi.system.domain.SysUploadFile">
        update sys_upload_file
        <set>
            <if test="status != null and status != ''">status = #{status},</if>
        </set>
        where file_id = #{fileId}
    </update>

    <!-- 查询过期的临时文件 -->
    <select id="selectExpiredFiles" parameterType="Date" resultMap="SysUploadFileResult">
        <include refid="selectFileVo"/>
        where status = '1' and upload_time &lt; #{expireTime}
    </select>

    <update id="updateByFileId">
        update sys_upload_file
        <set>
            <if test="sourceId != null and sourceId != ''">source_id = #{sourceId},</if>
        </set>
        where file_id = #{fileId}
    </update>

    <select id="selectFileBySourceId" resultType="java.lang.String">
        SELECT GROUP_CONCAT(file_id SEPARATOR ',') as file_ids
        FROM sys_upload_file
        WHERE source_id = #{sourceId};
    </select>

    <select id="selectFileUrlBySourceId" resultType="java.lang.String">
        SELECT GROUP_CONCAT(url SEPARATOR ',') as urls
        FROM sys_upload_file
        WHERE source_id = #{sourceId};
    </select>
</mapper>